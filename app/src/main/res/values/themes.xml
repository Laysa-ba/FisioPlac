<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 1. SEU TEMA BASE (MATERIAL 3 - MODO CLARO) -->
    <style name="Base.Theme.FisioPlac" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <!-- Define o estilo customizado para a barra de navegação -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!--
        Define as cores de seleção para componentes Material 3
        -->
        <item name="colorPrimary">@color/laranja</item>
        <!-- Cor do "pill" de seleção -->
        <item name="colorSecondaryContainer">@color/cinza</item>
        <!-- Cor do ícone/texto DENTRO do "pill" (ex: branco) -->
        <item name="colorOnSecondaryContainer">@color/white</item>
        <!-- Cor dos ícones/texto NÃO selecionados (ex: cinza) -->
        <item name="colorOnSurfaceVariant">@color/cinza_escuro</item>

    </style>

    <style name="Theme.FisioPlac" parent="Base.Theme.FisioPlac" />

    <!-- Estilo customizado para o BottomNav, se você precisar (ex: ripple) -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@color/ripple_laranja</item>
    </style>

    <!-- 2. TEMA DE SPLASH CORRIGIDO (Método B - Android 12+) -->
    <!-- Agora usa a biblioteca core-splashscreen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Ícone (ex: seu logo) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Cor de fundo da splash -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Tema para o qual a app vai transicionar -->
        <item name="postSplashScreenTheme">@style/Theme.FisioPlac</item>
    </style>

    <style name="HintEstiloNegrito" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
    </style>
</resources>

