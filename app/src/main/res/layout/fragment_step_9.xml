<?xml version="1.0" encoding="utf-8"?>
<!-- 1. Raiz é um ConstraintLayout para fixar os botões -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.form_geriatrica.Step9Fragment">

    <!-- 2. ScrollView ocupa o espaço entre o topo e os botões -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 3. O seu LinearLayout de conteúdo original está aqui -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"> <!-- Padding inferior para dar espaço -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taf_title"
                android:textColor="@color/verde"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/taf_procedure_label"
                android:textColor="@color/laranja"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/taf_procedure_text"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/cinza_escuro"
                android:stretchColumns="0,1,2">

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_header_age"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_header_men"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_header_women"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row1_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row1_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row1_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row2_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row2_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row2_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row3_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp" />
                    <TextView
                        android:text="@string/taf_table_row3_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row3_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 4. Este é o container de botões, FIXO no fundo -->
    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="true"
            android:indeterminateTint="@color/verde"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            tools:visibility="visible" />

        <!-- Este botão é 'Avançar' e não 'Concluir', como definido no Step9Fragment.kt -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoProximo"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/verde"
            android:paddingVertical="12dp"
            android:text="Avançar"
            android:textColor="@color/white"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>