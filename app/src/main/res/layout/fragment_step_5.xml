<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:clipToPadding="false"
    android:paddingBottom="16dp"
    tools:context=".ui.form_geriatrica.Step5Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleMemorizacao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Memorização (0-3):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelMemorizacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelMemorizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvMemorizacaoNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvMemorizacaoNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Peça para o entrevistado repetir as palavras ditas há pouco. (Carro, vaso e tijolo)"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleObjetos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (0-2):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelObjetos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelObjetos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemObjetosNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemObjetosNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mostre dois objetos para o entrevistado e peça para nomeá-los."
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleFrase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (1 pt):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelFrase"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelFrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemFraseNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemFraseNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Solicite ao entrevistado que repita a frase: NEM AQUI, NEM ALI, NEM LÁ."
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleEstagios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (0-3):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelEstagios"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelEstagios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemEstagiosNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemEstagiosNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Siga uma ordem de 3 estágios: Pegar o papel com a mão direita, dobrá-lo no meio e colocar no chão."
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleLerOrdem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (1 pt):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelLerOrdem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelLerOrdem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemLerOrdemNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemLerOrdemNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvCliqueAquiLerOrdem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/texto_linguagem_clique_aqui"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleEscreverFrase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (1 pt):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelEscreverFrase"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelEscreverFrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemEscreverFraseNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemEscreverFraseNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Peça para o entrevistado escrever uma frase completa. A frase deve ter um sujeito, um objeto e deve ter sentido. Ignore a ortografia."
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/borda_arredondada_branca"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleCopiarDesenho"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linguagem (1 pt):"
                    android:textColor="@color/verde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvLabelCopiarDesenho"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLabelCopiarDesenho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nota"
                    android:textColor="@color/cinza_escuro"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/actvLinguagemCopiarDesenhoNota"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/actvLinguagemCopiarDesenhoNota"
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:background="@drawable/caixa_selecao_laranja"
                    android:drawableEnd="@drawable/setadoselect"
                    android:gravity="center"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/preto_claro"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Peça ao entrevistado para copiar o seguinte desenho. Verifique se todos os lados estão presentes e se os lados da interseção formam um quadrilátero. Tremor e rotação podem ser ignorados."
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCliqueAquiVerDesenho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Clique aqui para ver o desenho"
                android:textColor="@color/verde"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULTADO: "
                android:textColor="@color/preto_claro"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResultadoFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/preto_claro"
                android:textSize="20sp"
                tools:text="Normal, 28 pontos." />
        </LinearLayout>

        <!-- ProgressBar (adicionado para consistência) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- BOTÕES DE NAVEGAÇÃO (Atualizados para MaterialButton e IDs corretos) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="-20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botaoProximo"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/verde"
                android:paddingVertical="12dp"
                android:text="Concluir"
                android:textColor="@color/white"
                app:cornerRadius="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>