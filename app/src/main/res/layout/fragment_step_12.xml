<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.form_geriatrica.Step12Fragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cinza"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"> <TextView
            android:id="@+id/tvDiagnosticoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnóstico Fisioterapêutico"
            android:textColor="@color/verde"
            android:textSize="22sp"
            android:textStyle="bold" />

            <EditText
                android:id="@+id/etDiagnostico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/borda_arredondada_branca"
                android:gravity="top|start"
                android:hint="Digite o diagnóstico..."
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="150dp"
                android:padding="12dp"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvObjetivosLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Objetivos:"
                android:textColor="@color/verde"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etObjetivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/borda_arredondada_branca"
                android:gravity="top|start"
                android:hint="Digite os objetivos..."
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="150dp"
                android:padding="12dp"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoConcluir"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/laranja"
            android:paddingVertical="12dp"
            android:text="Finalizar Ficha"
            android:textColor="@color/white"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>