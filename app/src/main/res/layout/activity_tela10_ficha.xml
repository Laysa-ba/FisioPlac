<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela10FichaActivity">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/verde"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/barra_de_progresso"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/barra_progress_2"
        app:layout_constraintBottom_toBottomOf="@id/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_arrow"
        app:layout_constraintTop_toTopOf="@id/back_arrow"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teste de caminhada de 6 minutos:"
                android:textColor="@color/verde"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TableLayout
                android:id="@+id/table_caminhada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@color/cinza_escuro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/verde" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="3 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="6 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="PA"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/et_pa_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="text"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_pa_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="text"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_pa_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="text"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="FC"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/et_fc_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_fc_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_fc_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Sat o2"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/et_sat_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_sat_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_sat_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Fr"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/et_fr_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_fr_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_fr_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Borg"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/et_borg_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_borg_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/et_borg_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/tv_distancia_percorrida_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distância percorrida:"
                android:textColor="@color/preto_claro"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/til_distancia_percorrida"
                app:layout_constraintBottom_toBottomOf="@+id/til_distancia_percorrida"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_distancia_percorrida"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/input_border_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_distancia_percorrida_label"
                app:layout_constraintTop_toBottomOf="@id/table_caminhada">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_distancia_percorrida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/preto_claro" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tv_distancia_predita_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distância predita:"
                android:textColor="@color/preto_claro"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/til_distancia_predita"
                app:layout_constraintBottom_toBottomOf="@+id/til_distancia_predita"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_distancia_predita"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/input_border_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_distancia_predita_label"
                app:layout_constraintTop_toBottomOf="@id/til_distancia_percorrida">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_distancia_predita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/preto_claro" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_avancar"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/verde"
        android:paddingVertical="12dp"
        android:text="Avançar"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>