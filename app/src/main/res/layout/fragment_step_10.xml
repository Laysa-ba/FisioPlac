<?xml version="1.0" encoding="utf-8"?>
<!-- 1. Raiz é um ConstraintLayout para fixar os botões -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.form_geriatrica.Step10Fragment">

    <!-- 2. O ScrollView agora está constrangido entre o topo e o container de botões -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:background="@color/cinza"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 3. O seu LinearLayout de conteúdo original está aqui dentro -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="32dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teste de caminhada de 6 minutos:"
                android:textColor="@color/verde"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TableLayout
                android:id="@+id/tableCaminhada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@color/cinza_escuro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/verde" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="0 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="3 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@color/verde"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="6 minuto"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="PA"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etPa0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etPa3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etPa6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="FC"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etFc0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etFc3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etFc6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Sat o2"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etSat0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etSat3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etSat6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Fr"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etFr0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etFr3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etFr6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:text="Borg"
                        android:textColor="@color/preto_claro"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etBorg0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etBorg3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />

                    <EditText
                        android:id="@+id/etBorg6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:padding="8dp"
                        tools:ignore="Autofill,LabelFor" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/tvDistanciaPercorridaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distância percorrida:"
                android:textColor="@color/preto_claro"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tilDistanciaPercorrida"
                app:layout_constraintBottom_toBottomOf="@+id/tilDistanciaPercorrida"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDistanciaPercorrida"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/laranja"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDistanciaPercorridaLabel"
                app:layout_constraintTop_toBottomOf="@id/tableCaminhada">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDistanciaPercorrida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/preto_claro" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvDistanciaPreditaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distância predita:"
                android:textColor="@color/preto_claro"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tilDistanciaPredita"
                app:layout_constraintBottom_toBottomOf="@+id/tilDistanciaPredita"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDistanciaPredita"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/laranja"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDistanciaPreditaLabel"
                app:layout_constraintTop_toBottomOf="@id/tilDistanciaPercorrida">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDistanciaPredita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/preto_claro" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- 4. Este é o container de botões, AGORA FIXO no fundo -->
    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- A ProgressBar está aqui para aparecer perto dos botões -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="true"
            android:indeterminateTint="@color/verde"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            tools:visibility="visible" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoProximo"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/verde"
            android:paddingVertical="12dp"
            android:text="Avançar"
            android:textColor="@color/white"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>