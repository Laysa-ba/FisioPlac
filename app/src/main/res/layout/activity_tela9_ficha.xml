<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".Tela9FichaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingTop="15dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:src="@drawable/seta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ProgressBar
            android:id="@+id/ficha_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="90" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/cinza_claro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_avancar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taf_title"
                android:textColor="@color/verde"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/taf_procedure_label"
                android:textColor="@color/laranja"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/taf_procedure_text"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/cinza_escuro"
                android:stretchColumns="0,1,2">

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_header_age"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_header_men"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_header_women"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/verde"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row1_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row1_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row1_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row2_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row2_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row2_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/cinza"
                        android:layout_margin="1dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/taf_table_row3_age"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row3_men"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:text="@string/taf_table_row3_women"
                        android:textColor="@color/preto_claro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_avancar"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/verde"
        android:text="AvanÃ§ar"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="12dp"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>