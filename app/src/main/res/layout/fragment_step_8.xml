<?xml version="1.0" encoding="utf-8"?>
<!-- 1. O Raiz agora é um ConstraintLayout para permitir a fixação -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.form_geriatrica.Step8Fragment">

    <!-- 2. O ScrollView agora está constrangido entre o topo e o container de botões -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 3. O seu LinearLayout de conteúdo original está aqui dentro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"> <!-- Adicionado padding inferior para dar espaço -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timed Up and Go Test (TUGT)"
                android:textColor="@color/verde"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="@string/tugt_instructions"
                android:textColor="@color/preto_claro"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <Chronometer
                    android:id="@+id/cronometroTugt"
                    android:layout_width="210dp"
                    android:layout_height="88dp"
                    android:textColor="@color/verde"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnIniciarCronometro"
                    android:layout_width="144dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/verde_claro"
                    android:text="Iniciar"
                    android:textColor="@color/preto_claro"
                    app:cornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnFinalizarCronometro"
                    android:layout_width="143dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/laranja_050"
                    android:enabled="false"
                    android:text="Finalizar"
                    android:textColor="@color/preto_claro"
                    app:cornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnIniciarCronometro" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textViewResultadoTugt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/borda_arredondada_branca"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/preto_claro"
                android:visibility="gone"
                tools:text="Resultado: Baixo risco de queda."
                tools:visibility="visible" />

            <!-- A ProgressBar foi movida para o container de botões fixo -->

        </LinearLayout>
    </ScrollView>

    <!-- 4. Este é o container de botões, AGORA FIXO no fundo -->
    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="true"
            android:indeterminateTint="@color/verde"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoProximo"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/verde"
            android:paddingVertical="12dp"
            android:text="Avançar"
            android:textColor="@color/white"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>