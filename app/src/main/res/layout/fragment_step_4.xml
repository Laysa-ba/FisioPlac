<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.form_geriatrica.Step4Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Estado Mental"
            android:textColor="@color/verde"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orientação espacial:"
            android:textColor="@color/laranja"
            android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tvTimeLabel" android:text="Tempo (0-5):" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <!-- ID ATUALIZADO -->
                    <TextView android:id="@+id/tvPontuacaoTempo" android:text="0" tools:text="5" android:textSize="16sp" android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNotaLabel1" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <TextView android:id="@+id/tvNotaLabel1" android:text="Nota" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- IDs ATUALIZADOS -->
                <CheckBox android:id="@+id/cbTempoMes" android:text="Mês" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbTempoDia" android:text="Dia" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbTempoAno" android:text="Ano" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbTempoDiaSemana" android:text="Dia da semana" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbTempoAproximado" android:text="Que horas são aproximadamente" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Local (0-5):" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <!-- ID ATUALIZADO -->
                    <TextView android:id="@+id/tvPontuacaoLocal" android:text="0" tools:text="5" android:textSize="16sp" android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNotaLabel2" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <TextView android:id="@+id/tvNotaLabel2" android:text="Nota" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- IDs ATUALIZADOS -->
                <CheckBox android:id="@+id/cbLocalEstado" android:text="Estado" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbLocalCidade" android:text="Cidade" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbLocalBairro" android:text="Bairro" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbLocalLocal" android:text="Local (clínica, hospital)" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                <CheckBox android:id="@+id/cbLocalPais" android:text="País" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="Repita as palavras (0-3):" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <!-- ID ATUALIZADO -->
                    <TextView android:id="@+id/tvPontuacaoPalavras" android:text="0" tools:text="3" android:textSize="16sp" android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNotaLabel3" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                    <TextView android:id="@+id/tvNotaLabel3" android:text="Nota" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <GridLayout android:columnCount="3" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <!-- IDs ATUALIZADOS -->
                    <CheckBox android:id="@+id/cbPalavraCarro" android:text="Carro" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                    <CheckBox android:id="@+id/cbPalavraVaso" android:text="Vaso" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                    <CheckBox android:id="@+id/cbPalavraTijolo" android:text="Tijolo" android:layout_columnWeight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="O senhor faz cálculos? (0-5):" android:id="@+id/tvMathLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_width="0dp" app:layout_constraintEnd_toStartOf="@+id/tilPontuacaoCalculo" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:textColor="@color/preto_claro"/>
                    <!-- ID ATUALIZADO (Layout e AutoComplete) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPontuacaoCalculo"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="Nota"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <AutoCompleteTextView
                            android:id="@+id/autoCompletePontuacaoCalculo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- IDs ATUALIZADOS -->
                <RadioGroup android:id="@+id/rgCalculo" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbCalculoSim" android:text="Sim" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                    <RadioButton android:id="@+id/rbCalculoNao" android:text="Não" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/preto_claro" app:buttonTint="@color/laranja"/>
                </RadioGroup>
                <!-- IDs ATUALIZADOS -->
                <TextView
                    android:id="@+id/tvCalculoInstrucaoSim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instrução: “Quanto é 100-7? 93-7? 86-7? 79-7? 72-7? 65?”"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:textColor="@color/preto_claro"/>
                <TextView
                    android:id="@+id/tvCalculoInstrucaoNao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instrução: “Soletre a palavra MUNDO de trás pra frente (O D N U M)”"
                    android:visibility="gone"
                    android:textColor="@color/preto_claro"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ProgressBar (adicionado para consistência) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- BOTÕES DE NAVEGAÇÃO (Atualizados para MaterialButton e IDs corretos) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botaoConcluir"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/verde"
                android:paddingVertical="12dp"
                android:text="Avançar"
                android:textColor="@color/white"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>